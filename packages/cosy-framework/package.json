{
  "name": "@coffic/cosy-framework",
  "version": "1.0.8",
  "description": "Laravel-inspired framework for Electron applications",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cosy": "./dist/bin.js"
  },
  "scripts": {
    "prebuild": "pnpm clean",
    "build": "tsc && tsc-alias",
    "postbuild": "chmod +x dist/bin.js",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist"
  },
  "keywords": [
    "electron",
    "laravel",
    "framework",
    "dependency-injection",
    "ioc",
    "middleware",
    "router"
  ],
  "author": "Coffic Team",
  "license": "MIT",
  "dependencies": {
    "@coffic/buddy-it": "^1.1.3",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "drizzle-kit": "^0.31.4",
    "electron-updater": "^6.6.2",
    "jiti": "^2.4.2",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "electron": "^37.2.0",
    "eslint": "^9.0.0",
    "jest": "^30.0.4",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./application": {
      "import": "./dist/application/index.js",
      "require": "./dist/application/index.js",
      "types": "./dist/application/index.d.ts"
    },
    "./container": {
      "import": "./dist/container/index.js",
      "require": "./dist/container/index.js",
      "types": "./dist/container/index.d.ts"
    },
    "./providers": {
      "import": "./dist/providers/index.js",
      "require": "./dist/providers/index.js",
      "types": "./dist/providers/index.d.ts"
    },
    "./router": {
      "import": "./dist/router/index.js",
      "require": "./dist/router/index.js",
      "types": "./dist/router/index.d.ts"
    },
    "./middleware": {
      "import": "./dist/middleware/index.js",
      "require": "./dist/middleware/index.js",
      "types": "./dist/middleware/index.d.ts"
    },
    "./facades": {
      "import": "./dist/facades/index.js",
      "require": "./dist/facades/index.js",
      "types": "./dist/facades/index.d.ts"
    },
    "./constants": {
      "import": "./dist/constants.js",
      "require": "./dist/constants.js",
      "types": "./dist/constants.d.ts"
    },
    "./contracts/PreloadContract": {
      "import": "./dist/contracts/PreloadContract.js",
      "require": "./dist/contracts/PreloadContract.js",
      "types": "./dist/contracts/PreloadContract.d.ts"
    },
    "./update": {
      "import": "./dist/update/index.js",
      "require": "./dist/update/index.js",
      "types": "./dist/update/index.d.ts"
    },
    "./contracts/logger": {
      "import": "./dist/contracts/logger/index.js",
      "require": "./dist/contracts/logger/index.js",
      "types": "./dist/contracts/logger/index.d.ts"
    }
  }
}
