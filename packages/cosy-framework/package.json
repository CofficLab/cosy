{
  "name": "@coffic/cosy-framework",
  "version": "1.0.11",
  "description": "Laravel-inspired framework for Electron applications",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cosy": "./dist/bin.js"
  },
  "scripts": {
    "prebuild": "pnpm clean",
    "cosy": "cosy",
    "build": "tsc && tsc-alias",
    "postbuild": "chmod +x dist/bin.js",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf dist"
  },
  "keywords": [
    "electron",
    "laravel",
    "framework",
    "dependency-injection",
    "ioc",
    "middleware",
    "router"
  ],
  "author": "Coffic Team",
  "license": "MIT",
  "dependencies": {
    "@coffic/buddy-it": "^1.1.3",
    "boxen": "^8.0.1",
    "chalk": "^4.0.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "drizzle-kit": "^0.31.4",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2",
    "jiti": "^2.4.2",
    "mitt": "^3.0.1",
    "ora": "^8.2.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "electron": "^37.2.0",
    "jest": "^30.0.4",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  }
}
