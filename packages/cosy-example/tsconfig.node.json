{
    "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
    "include": [
        "electron.vite.config.*",
        "src/**/*.d.ts",
        "src/main/**/*",
        "src/preload/**/*",
        "src/types/**/*",
        "native/**/*",
        "../packages/cosy-foundation/src/window/contracts/WindowContract.ts",
        "ui",
    ],
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "types": [
            "electron-vite/node"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
        }
    }
}