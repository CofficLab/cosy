{
    "compilerOptions": {
        "outDir": "dist-extension",
        "rootDir": ".",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "noEmit": false,
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "extension/**/*"
    ],
    "exclude": [
        "src/**/*",
        "**/*.test.ts",
        "**/*.spec.ts",
        "node_modules",
        "dist",
        "dist-extension",
        ".astro"
    ]
}