{
  "devDependencies": {
    "chalk": "^5.4.1",
    "concurrently": "^9.2.0",
    "inquirer": "^12.7.0",
    "lodash-es": "^4.17.21",
    "nodemon": "^3.1.10",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:types": "turbo build --filter='@coffic/buddy-types' --force",
    "build:deps": "turbo build --filter='@coffic/cosy-*' --filter='@coffic/buddy-types'",
    "build:logger": "turbo build --filter='@coffic/cosy-logger'",
    "build:rate-limit": "turbo build --filter='@coffic/cosy-rate-limit'",
    "build:keyboard": "turbo build --filter='@coffic/cosy-keyboard'",
    "build:framework": "turbo build --filter='@coffic/cosy-framework'",
    "build:buddy:mac": "pnpm run build:buddy && pnpm --filter buddy build:mac",
    "build:plugins": "turbo build --filter='@coffic/buddy-plugin-*'",
    "dev:buddy": "clear && pnpm --filter buddy dev",
    "dev:deps": "turbo dev --filter='@coffic/cosy-*' --parallel",
    "dev:all": "turbo dev --parallel",
    "ext": "nodemon pipeline.mjs",
    "mcp": "pnpm --filter mcp-core test",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "typecheck": "turbo typecheck"
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.22",
    "ai": "^4.3.16",
    "electron-log": "^5.4.1",
    "openai": "^5.8.2",
    "source-map-support": "^0.5.21"
  }
}
